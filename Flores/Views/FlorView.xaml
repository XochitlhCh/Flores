<UserControl x:Class="Flores.Views.FlorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Flores.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <StackPanel.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            </Style>
        </StackPanel.Resources>
        <TextBlock Text="{Binding Nombre}" FontSize="12" FontWeight="Bold"></TextBlock>
        <Image Source="{Binding URL}" Height="100" Stretch="Uniform" HorizontalAlignment="Center"></Image>
        <TextBlock Text="{Binding NombreCientifico}" FontSize="10"></TextBlock>
    </StackPanel>
</UserControl>
